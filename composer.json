        "cwp/cwp-search": "1.x-dev",
        "silverstripe/fulltextsearch": "3.x-dev",
        "symbiote/silverstripe-queuedjobs": "^4.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3",
        "cwp/cwp": "^2.9",
        "cwp/cwp-core": "^2",
        "cwp/starter-theme": "^2"
